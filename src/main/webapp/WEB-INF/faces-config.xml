<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee     http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <navigation-rule>
  <from-view-id>/welcome.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>success</from-outcome>
   <to-view-id>/member/home.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-action>#{LoginBean.login}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-action>#{LogoutBean.logout}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>startLogin</from-outcome>
   <to-view-id>/login.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>home</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>forgotPassword</from-outcome>
   <to-view-id>/lostPassword.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>newAccount</from-outcome>
   <to-view-id>/account/newAccountRequest.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>accountSettings</from-outcome>
   <to-view-id>/member/accountDetails.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>events</from-outcome>
   <to-view-id>/events.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>new_event</from-outcome>
   <to-view-id>/newEvent.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 
 <navigation-rule>
  <from-view-id>/account/newAccountRequest.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>success</from-outcome>
   <to-view-id>/account/newAccountSubmitted.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 
 <navigation-rule>
  <from-view-id>/account/startActivation.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>success</from-outcome>
   <to-view-id>/account/activationConfirmation.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 
 <navigation-rule>
  <from-view-id>/events.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>success</from-outcome>
   <to-view-id>/event.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 
 <validator>
  <validator-id>EmailValidator</validator-id>
  <validator-class>com.kyle.route66.web.validator.EmailValidator</validator-class>
 </validator>
 <validator>
  <validator-id>MatchValidator</validator-id>
  <validator-class>com.kyle.route66.web.validator.MatchValidator</validator-class>
 </validator>
 
 <converter>
 	<converter-id>stateConverter</converter-id>
 	<converter-class>com.kyle.route66.web.converter.StateSelectConverter</converter-class>
 </converter>
 <application>
  <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
 </application>
</faces-config>
